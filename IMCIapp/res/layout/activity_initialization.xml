<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/welcome"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initialization_description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/medText" />

        <LinearLayout
            android:id="@+id/linearlayout_initbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible" >

            <Button
                android:id="@+id/button_newcenter"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_default"
                android:text="@string/new_center"
                android:textSize="@dimen/medText" />

            <Button
                android:id="@+id/button_restorecenter"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_default"
                android:text="@string/restore_center"
                android:textSize="@dimen/medText" />

            <ImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:contentDescription="@string/accessibility_horizontal_bar"
                android:scaleType="fitXY"
                android:src="@android:drawable/divider_horizontal_dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_zoneselection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initialization_selectcenterlocation"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/smallText" />

            <Button
                android:id="@+id/button_zoneselection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:drawable/btn_default"
                android:text="@string/select_location"
                android:textSize="@dimen/smallText" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selected_location"
                android:textColor="@color/white"
                android:textSize="@dimen/smallText" />

            <TextView
                android:id="@+id/textView_selectedzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/none"
                android:textColor="@color/white"
                android:textSize="@dimen/bigText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_logindetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initialization_enteradmindetails"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/smallText" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textColor="@color/white"
                android:textSize="@dimen/smallText" />

            <EditText
                android:id="@+id/editText_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="@string/fullname_default"
                android:inputType="textPersonName"
                android:textSize="@dimen/smallText" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/white"
                android:textSize="@dimen/smallText" />

            <EditText
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="@dimen/smallText" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_repeat"
                android:textColor="@color/white"
                android:textSize="@dimen/smallText" />

            <EditText
                android:id="@+id/editText_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="@dimen/smallText" />

            <Button
                android:id="@+id/button_setupcenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:drawable/btn_default"
                android:hint="@string/fullname_default"
                android:text="@string/setup_center"
                android:textSize="@dimen/medText" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>